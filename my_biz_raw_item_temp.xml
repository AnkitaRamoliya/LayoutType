<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeBizDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_110sdp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/swipeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.oozeetech.bizdesk.widget.DButton
                    android:id="@+id/btnEdit"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorTextGray"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12sdp" />

                <com.oozeetech.bizdesk.widget.DButton
                    android:id="@+id/btnConfirm"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/diamondOrange"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12sdp" />

                <com.oozeetech.bizdesk.widget.DButton
                    android:id="@+id/btnDelete"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorTextRed"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="center_vertical|center"
            app:cardPreventCornerOverlap="true"
            android:padding="@dimen/_2sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/llRowData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center|center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtSaleDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Jan 30, 2017"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/_11sdp" />

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtDueDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Due Days : 10"
                        android:textColor="@color/colorTextRed"
                        android:textSize="@dimen/_11sdp" />

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtPaymentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="Jan 30, 2017"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="#f29e9d9e" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtPartyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Party Name"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/_15sdp" />

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtBizType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rough"
                        android:textColor="@color/diamondOrange"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Customer name : "
                        android:textSize="@dimen/_12sdp" />

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=" xyz"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="#f29e9d9e" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left"
                        android:padding="@dimen/_1sdp"
                        android:orientation="horizontal">

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount : "
                            android:textColor="@color/colorTextBlue"
                            android:textSize="@dimen/_11sdp" />

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="$200"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/_1sdp"
                        android:orientation="horizontal">

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brokerage : "
                            android:textColor="@color/colorTextBlue"
                            android:textSize="@dimen/_11sdp" />

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtBrokerage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="$200"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>

