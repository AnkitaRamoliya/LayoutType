<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/SingleRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pear Diamond Pink Color :"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/_16sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="#f29e9d9e" />

                </LinearLayout>

                <com.oozeetech.bizdesk.widget.DTextView
                    android:id="@+id/txtShippingPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:drawableLeft="@drawable/ic_shipping_"
                    android:drawablePadding="@dimen/_4sdp"
                    android:drawableTint="@color/colorTextGreen"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0.35%"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtCrt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:inputType="numberDecimal"
                            android:text="95 Crt"
                            android:textColor="@color/colorTextGray"
                            android:textSize="@dimen/_13sdp" />

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtCut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center|center_vertical"
                            android:text="58 Cut"
                            android:textColor="@color/colorTextGray"
                            android:textSize="@dimen/_13sdp" />

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtRPerCrt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="22 R/crt"
                            android:textColor="@color/colorTextGray"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll4RoughBiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.oozeetech.bizdesk.widget.DTextView
                                android:id="@+id/txtPremiumPer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:maxLines="1"
                                android:text="Premium(%) : "
                                android:textColor="@color/colorTextBlack"
                                android:textSize="@dimen/_12sdp" />

                            <com.oozeetech.bizdesk.widget.DTextView
                                android:id="@+id/txtTotalAmt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="right|center_vertical"
                                android:maxLines="1"
                                android:text="Total : "
                                android:textColor="@color/colorTextBlack"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>