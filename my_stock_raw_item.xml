<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeBizDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/swipeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <com.oozeetech.bizdesk.widget.DButton
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:background="@color/colorTextRed"
                android:gravity="center"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtItemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pear Diamond Pink Color :"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="#f29e9d9e" />

                    </LinearLayout>

                    <com.oozeetech.bizdesk.widget.DTextView
                        android:id="@+id/txtBizType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Polished"
                        android:textColor="@color/colorTextGreen"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.oozeetech.bizdesk.widget.DTextView
                                android:id="@+id/txtCrt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="95 Crt"
                                android:textColor="@color/colorTextGray"
                                android:textSize="@dimen/_13sdp" />

                            <com.oozeetech.bizdesk.widget.DTextView
                                android:id="@+id/txtCut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="58 Cut"
                                android:textColor="@color/colorTextGray"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.oozeetech.bizdesk.widget.DTextView
                                android:id="@+id/txtPremium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="Premium(%) : 0.35%"
                                android:textColor="@color/colorTextGray"
                                android:textSize="@dimen/_13sdp" />

                            <com.oozeetech.bizdesk.widget.DTextView
                                android:id="@+id/txtShippingPer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_shipping_"
                                android:drawablePadding="@dimen/_4sdp"
                                android:drawableTint="@color/colorTextGreen"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="0.35%"
                                android:textColor="@color/colorTextBlack"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.6"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtPricePerCrt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="22 R/crt"
                            android:textColor="@color/colorTextGray"
                            android:textSize="@dimen/_13sdp" />

                        <com.oozeetech.bizdesk.widget.DTextView
                            android:id="@+id/txtTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="23153"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>