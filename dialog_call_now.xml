<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <com.oozeetech.bizdesk.widget.DTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="Call Now"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_16sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <com.oozeetech.bizdesk.widget.DTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/_6sdp"
            android:text="Party Detail"
            android:textAllCaps="false"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="@dimen/_130sdp"
            android:layout_height="0.4dp"
            android:background="@color/colorTextGray" />

        <com.oozeetech.bizdesk.widget.DTextView
            android:id="@+id/ADtxtPartyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:text="Ankita Ramoliya"
            android:textAllCaps="false"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:id="@+id/llPartyContact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.oozeetech.bizdesk.widget.DTextView
                android:id="@+id/txtpartyContact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/_8sdp"
                android:text="9876543210"
                android:textAllCaps="false"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/btnPartyContact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_call_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPartyContact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.oozeetech.bizdesk.widget.DTextView
                android:id="@+id/txtpartyContact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/_8sdp"
                android:text="9876543210"
                android:textAllCaps="false"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/btnPartyContact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_call_blue" />
        </LinearLayout>

        <com.oozeetech.bizdesk.widget.DTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/_6sdp"
            android:text="Customer Detail"
            android:textAllCaps="false"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="@dimen/_140sdp"
            android:layout_height="0.4dp"
            android:background="@color/colorTextGray" />

        <com.oozeetech.bizdesk.widget.DTextView
            android:id="@+id/ADtxtCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:text="Anki Patel"
            android:textAllCaps="false"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:id="@+id/llCustomerContact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.oozeetech.bizdesk.widget.DTextView
                android:id="@+id/txtCustomerContact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/_8sdp"
                android:text="9876543210"
                android:textAllCaps="false"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/btnCustomerContact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_call_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCustomerContact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.oozeetech.bizdesk.widget.DTextView
                android:id="@+id/txtCustomerContact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/_8sdp"
                android:text="9876543210"
                android:textAllCaps="false"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/btnCustomerContact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_call_blue" />
        </LinearLayout>

        <com.oozeetech.bizdesk.widget.DButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="#606060"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>
</LinearLayout>
